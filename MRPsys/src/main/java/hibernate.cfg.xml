<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
   <session-factory>
   <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
   <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
   <property name="hibernate.connection.url">jdbc:mysql://localhost/proyecto</property>
   <property name="hibernate.connection.username">root</property>
   <property name="hibernate.connection.password"></property>
   <mapping class="modelo.Clases.Kit"/>
   <mapping class="modelo.Clases.KitMaterial"/>
   <mapping class="modelo.Clases.KitProducto"/>
   <mapping class="modelo.Clases.Material"/>
   <mapping class="modelo.Clases.Pedido"/>
   <mapping class="modelo.Clases.PedidoProducto"/>
   <mapping class="modelo.Clases.PedidoKit"/>
   <mapping class="modelo.Clases.Producto"/>
   <mapping class="modelo.Clases.Usuario"/>
   <mapping class="modelo.Clases.Rol"/>
   <mapping class="modelo.Clases.RolUsuario"/>
</session-factory>
</hibernate-configuration>